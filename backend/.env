DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
# 允许所有主机访问，避免Docker内部IP报错
DJANGO_ALLOWED_HOSTS=*

# Database (改为连接 Docker 里的 Postgres)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=moments_db
DB_USER=postgres
DB_PASSWORD=postgres
# 关键点：这里的 host 必须填 docker-compose.yml 里定义的服务名 "db"
DB_HOST=db
DB_PORT=5432

# Celery (改为连接 Docker 里的 Redis)
# 关键点：这里的 host 必须填 docker-compose.yml 里定义的服务名 "redis"
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Google AI (如果有Key就填，没有就先留空，Member A负责解决网络问题)
GOOGLE_API_KEY=

# Sensitive words
SENSITIVE_WORDS=违禁,敏感,非法