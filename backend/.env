DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
# 允许所有主机访问，避免Docker内部IP报错
DJANGO_ALLOWED_HOSTS=*

# Database (连接 Docker 里的 Postgres)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=moments_db
DB_USER=postgres
DB_PASSWORD=postgres
# 关键点：这里的 host 必须填 docker-compose.yml 里定义的服务名 "db"
DB_HOST=db
DB_PORT=5432

# Celery (连接 Docker 里的 Redis)
# 关键点：这里的 host 必须填 docker-compose.yml 里定义的服务名 "redis"
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# AI Service Configuration (LangChain - SiliconFlow)
# -----------------------------------------------------------------------------
# 提供商: openai (LangChain 使用 OpenAI 兼容模式连接硅基流动)
AI_PROVIDER=openai

# API Key (你的硅基流动密钥)
AI_API_KEY=sk-mbddibjsghfxgglxzexymxrxcskkpodmtflrxfpymjdyrnwq

# Base URL (硅基流动接口地址)
AI_BASE_URL=https://api.siliconflow.cn/v1

# Default Model Name (默认模型 - 用于标签推荐)
# 这里选用了 Qwen3-VL-8B-Instruct，速度极快且通常免费/极低成本
AI_MODEL_NAME=Qwen/Qwen3-VL-8B-Instruct

# Proxy URL (硅基流动是国内直连，必须留空！)
AI_PROXY_URL=

# Sensitive words
SENSITIVE_WORDS=违禁,敏感,非法